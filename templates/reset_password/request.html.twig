{% extends 'base.html.twig' %}

{% block title %}Reset Mot de Passe{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href={{asset('css/resetPassword.css')}}
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitilisation Du Mot de Passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre adresse email et nous vous enverrons 
                un lien de réinitialisation de mot de passe 
            </small>
        </div>

        <button class="btn btn-primary">Envoyer le lien </button>
    {{ form_end(requestForm) }}
{% endblock %}
